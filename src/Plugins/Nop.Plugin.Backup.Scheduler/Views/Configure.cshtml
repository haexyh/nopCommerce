@model Nop.Plugin.Backup.Scheduler.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

@* @await Component.InvokeAsync("StoreScopeConfiguration") *@

<form asp-controller="BackupScheduler" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <p>@T("Plugins.Payments.Manual.Instructions")</p>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="AdditionalFeePercentage" 
                                                     asp-input="AdditionalFeePercentage" 
                                                     asp-store-scope="@Model.AdditionalFeePercentage" />
                        <nop-label asp-for="AdditionalFeePercentage" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 offset-md-3">
                        <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>